{
    "compilerOptions": {
        "outDir": "lib/server/dist",
        "module": "commonjs",
        "lib": [
            "es6"
        ],
        "target": "es2016",
        "declaration": true,
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "lib/server/**/*"
    ]
}